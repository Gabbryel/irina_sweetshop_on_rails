<%= content_for(:title) {"Recenzii pentru #{@cakemodel.content}"} %>
<div class="container edit-fonts pt-5 pb-5 mb-5">
  <div class="row mt-5">
    <div class="col mt-5">
      <%= link_to 'Înapoi', category_cakemodels_path(@cakemodel.category.id), class: 'btn btn-sm btn-custom-1 rounded-pill' %>
      <div class="show-recipe_photo">
        <%= cl_image_tag @cakemodel.photo.key %>
      </div>
      <div>
        <h6 class="text-center edit-fonts color-fonts">Ratings & reviews for: </h6>
        <h4 class="text-center edit-fonts pb-4 color-fonts"><%= @cakemodel.content %> </h4>

        <%= simple_form_for [@cakemodel, @review] do |f| %>
          <%= f.input :rating, collection: %i[1 2 3 4 5], label: 'Rating de la 1 la 5', label_html: { class: 'form-fonts color-fonts' } %>
          <%= f.input :content, label: 'Recenzie (min. 10 / max. 50 car.)', label_html: { class: 'form-fonts color-fonts' } %>
          <%= f.button :submit, value: 'Posteaza recenzia', class: 'btn btn-custom-1 btn-block rounded-pill mb-5 edit-fonts' %>
        <% end %>

        <% @cakemodel.reviews.each do |rev| %>
          <%= rev.rating %>
          <%= rev.content %>
        <% end %>
      </div>
    </div>
  </div>
  <%= link_to 'Înapoi', category_cakemodels_path(@cakemodel.category.id), class: 'btn btn-sm btn-custom-1 rounded-pill' %>
</div>