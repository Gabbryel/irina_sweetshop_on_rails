<% if @cakemodel.photo.present? %>
  <% content_for :meta_image, cl_image_path(@cakemodel.photo.key) %>
<% end %>
<% content_for :meta_description, @cakemodel.name %>
<div class="recipe-show-container">
  <div class="recipe-show-main">
    <div class="card-container-recipes">
      <div class="card-image-recipes cakemodel-card-image">
        <%= cl_image_tag(@cakemodel.photo.key, alt: @cakemodel.name, fetch_format: :auto, width: 500, crop: :scale) %>
      </div>
    </div>
    <div class="recipe-show-main-description">
      <h1><%= "#{@cakemodel.name}" %></h1>
      <%= render partial: 'partials/cakemodels/cakemodel_description' %>
      <%= render partial: 'partials/cakemodels/next_prev_section' %>
    </div>
    <%= render partial: 'partials/cakemodels/add_photos' %>
  </div>
  <%= render partial: 'partials/cakemodels/ratings' %>
  <% if isUserAdmin? %>
    <div class="cakemodel-admin-tools">
      <h2>Admin tools</h2>
      <%= render partial: 'partials/cakemodels/add_photos_form' %>
      <%= render partial: 'partials/cakemodels/add_recipes_form' %>
    </div>
  <% end %>
</div>