<tr id="design_<%= design.id %>">
  <td>
    <div class="fw-semibold text-dark"><%= design.name %></div>
  </td>
  <td>
    <% if design.category.present? %>
      <span class="badge rounded-pill bg-info-subtle text-info-emphasis"><%= design.category.name %></span>
    <% else %>
      <span class="text-muted small">Fără categorie</span>
    <% end %>
  </td>
  <td>
    <div class="fw-semibold"><%= humanized_money_with_symbol(design.price) %></div>
  </td>
  <td>
    <div class="fw-semibold"><%= l(design.updated_at, format: :short) %></div>
    <div class="text-muted small">acum <%= distance_of_time_in_words_to_now(design.updated_at) %></div>
  </td>
  <td class="text-end">
    <div class="btn-group btn-group-sm" role="group">
      <%= link_to 'Editează', edit_design_path(design), class: 'btn btn-outline-secondary' %>
      <%= button_to 'Șterge', design_path(design), method: :delete,
                    form: { data: { turbo_confirm: 'Confirmi ștergerea designului?' } },
                    class: 'btn btn-outline-danger' %>
    </div>
  </td>
</tr>
