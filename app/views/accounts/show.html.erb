<div class="container account-dashboard py-5" style="margin-top: 15vh;">
  <div class="row g-4 mb-4">
    <div class="col-lg-8">
      <div class="card shadow-sm border-0 h-100">
        <div class="card-body p-4 d-flex flex-column gap-3">
          <div class="d-flex justify-content-between align-items-start flex-wrap gap-2">
            <div>
              <span class="badge bg-dark text-uppercase">Contul meu</span>
              <h1 class="h4 mt-2 mb-1">Bun venit, <%= @display_name %></h1>
              <p class="text-muted mb-0">Gestionează comenzile și datele tale.</p>
            </div>
            <div class="text-end small text-muted">
              <div><i class="fa-regular fa-envelope me-1"></i><%= @user.email %></div>
            </div>
          </div>

          <div class="row g-3 mt-2">
            <div class="col-md-4">
              <div class="card border-0 h-100 bg-light">
                <div class="card-body">
                  <p class="text-muted text-uppercase small mb-1">Comenzi totale</p>
                  <div class="h4 mb-0 fw-bold"><%= @orders_count %></div>
                </div>
              </div>
            </div>
            <div class="col-md-4">
              <div class="card border-0 h-100 bg-light">
                <div class="card-body">
                  <p class="text-muted text-uppercase small mb-1">Comenzi finalizate</p>
                  <div class="h4 mb-0 fw-bold text-success"><%= @delivered_count %></div>
                </div>
              </div>
            </div>
            <div class="col-md-4">
              <div class="card border-0 h-100 bg-light">
                <div class="card-body">
                  <p class="text-muted text-uppercase small mb-1">Total cheltuit</p>
                  <div class="h4 mb-0 fw-bold"><%= @lifetime_spend.format %></div>
                </div>
              </div>
            </div>
          </div>

          <% if @upcoming_delivery.present? %>
            <div class="alert alert-info mb-0">
              <strong>Livrare următoare:</strong> <%= l(@upcoming_delivery) %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-lg-4">
      <div class="card shadow-sm border-0 h-100">
        <div class="card-body p-4">
          <h2 class="h6 text-uppercase text-muted">Date contact</h2>
          <div class="d-flex flex-column gap-2 mt-2">
            <div class="d-flex align-items-center gap-2">
              <i class="fa-solid fa-user text-muted"></i>
              <span><strong>Nume:</strong> <%= @display_name %></span>
            </div>
            <div class="d-flex align-items-center gap-2">
              <i class="fa-regular fa-envelope text-muted"></i>
              <span><strong>Email:</strong> <%= @user.email %></span>
            </div>
            <div class="d-flex align-items-center gap-2">
              <i class="fa-solid fa-lock text-muted"></i>
              <span>Protejat prin autentificare</span>
            </div>
          </div>
          <div class="mt-3">
            <%= link_to 'Actualizează parola', edit_user_registration_path, class: 'btn btn-outline-primary btn-sm' %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row g-4">
    <div class="col-lg-6">
      <div class="card shadow-sm border-0 h-100">
        <div class="card-header bg-white border-0 d-flex justify-content-between align-items-center">
          <div>
            <h3 class="h6 mb-0">Comenzi active</h3>
            <p class="text-muted small mb-0">Comenzi în curs de procesare</p>
          </div>
          <% if @open_orders.any? %>
            <span class="badge bg-warning text-dark"><%= @open_orders.size %></span>
          <% end %>
        </div>
        <div class="card-body p-0">
          <% if @open_orders.any? %>
            <div class="list-group list-group-flush">
              <% @open_orders.each do |order| %>
                <div class="list-group-item d-flex justify-content-between align-items-start flex-wrap gap-2">
                  <div>
                    <div class="fw-semibold">Comanda #<%= order.id %> • <%= l(order.created_at, format: :short) %></div>
                    <div class="text-muted small">Livrare: <%= order.delivery_date.present? ? l(order.delivery_date) : '—' %> • <%= order.method_of_delivery == 'pickup' ? 'Ridicare' : 'Livrare' %></div>
                  </div>
                  <div class="text-end">
                    <span class="badge bg-dark"><%= Cart::STATUS_LABELS[order.status] || order.status.titleize %></span>
                    <div class="fw-bold"><%= order.total_money.format %></div>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="text-muted text-center my-4">Nicio comandă activă.</p>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-lg-6">
      <div class="card shadow-sm border-0 h-100">
        <div class="card-header bg-white border-0 d-flex justify-content-between align-items-center">
          <div>
            <h3 class="h6 mb-0">Istoric comenzi</h3>
            <p class="text-muted small mb-0">Ultimele comenzi finalizate sau anulate</p>
          </div>
        </div>
        <div class="card-body p-0">
          <% if @past_orders.any? %>
            <div class="list-group list-group-flush">
              <% @past_orders.each do |order| %>
                <div class="list-group-item d-flex justify-content-between align-items-start flex-wrap gap-2">
                  <div>
                    <div class="fw-semibold">Comanda #<%= order.id %> • <%= l(order.created_at, format: :short) %></div>
                    <div class="text-muted small">Livrată/Ridicare: <%= order.delivery_date.present? ? l(order.delivery_date) : '—' %> • <%= order.method_of_delivery == 'pickup' ? 'Ridicare' : 'Livrare' %></div>
                  </div>
                  <div class="text-end">
                    <span class="badge <%= order.status == Cart::STATUSES[:delivered] ? 'bg-success' : 'bg-secondary' %>"><%= Cart::STATUS_LABELS[order.status] || order.status.titleize %></span>
                    <div class="fw-bold"><%= order.total_money.format %></div>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="text-muted text-center my-4">Încă nu ai comenzi finalizate.</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
