<% if @category.id %>
<% content_for(:title) {'Modifică categoria - Cofetăria Irina - Bacău'} %>
<% else %>
<% content_for(:title) {'Creează o nouă categorie - Cofetăria Irina - Bacău'} %>
<% end %>

<div class="container edit-fonts">
  <div class="row my-5">
    <div class="col-12 new-category-colon">
      <% if @category.id %>
        <h2 class="text-center mt-5 mb-4 edit-fonts color-fonts">Modifică categoria</h2>
      <% else %>
        <h2 class="text-center mt-5 mb-4 edit-fonts color-fonts">Creează o nouă categorie</h2>
      <% end %>
      <%= simple_form_for @category do |f| %>
    <%= f.input :name, label: 'Nume categorie', placeholder: 'Ex.: Torturi, Prăjituri', label_html: { class: 'color-fonts' } %>
      <%= f.input :photo, as: :file, label: 'Alege fotografia', label_html: { class: 'btn btn-custom-1 btn-block' } %>
      <%= f.input :has_recipe, label: 'Are rețetă?', label_html: { class: 'color-fonts' } %>
      <%= f.input :has_models, label: 'Are modele de expus?', label_html: { class: 'color-fonts' } %>
        <% if @category.id %>
          <%= f.button :submit, value: 'Modifică categoria', class: 'btn btn-custom btn-block' %>
        <% else %>
          <%= f.button :submit, value: 'Categorie nouă', class: 'btn btn-custom-1 btn-block' %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>