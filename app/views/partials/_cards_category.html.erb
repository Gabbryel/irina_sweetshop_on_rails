<div class="container cards-container">
  <div class="row justify-content-center">
    <% @categories.each do |c| %>
      <div class="col-sm-5 col-md-5 col-lg-3 card-container">
      <%= cl_image_tag(c.photo.key, class: 'card-image', fetch_format: :auto, width: 500, crop: :scale)%>
      <div class="card-category_name">
        <p class='card-title'><%=  c.name %></p>
      </div>
        <p class='text-center justify-content-around my-2'>
          <% if c.has_recipe %>
            <%= link_to 'ReÈ›ete', category_recipes_path(c.id) %>  
          <% end %>
          <% if c.has_models %>
            <%= link_to 'Modele', category_cakemodels_path(c.id) %>
          <% end %>
          <% if policy(c).edit? %>
            <%= link_to 'Edit', edit_category_path(c.id) %>  
          <% end %>
          <% if policy(c).destroy? %>
            <%= link_to 'Delete', category_path(c), method: :delete %></p>
          <% end %>
      </div>
      <% end %>
    </div>
    
    <% if policy(Category).new? %>
    <div class="category-button">
      <%= link_to 'New category', new_category_path, class: 'category' %>
    </div>
    <% end %>
  </div>    
