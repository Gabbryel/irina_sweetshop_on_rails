<div class="container cards-container">
  <div class="row justify-content-center">
    <% @categories.each do |c| %>
      <div class="col-sm-5 col-md-5 col-lg-3 card-container">
      <%= cl_image_tag c.photo.key, class: 'card-image'%>
      <div class="card-category_name">
        <h2><%=  c.name %></h2>
      </div>
        <p class='text-center justify-content-around my-2'>
          <% if c.name != 'Candy bar' %>
          <%= link_to 'ReÈ›ete', category_recipes_path(c.id) %>  
          <% end %>
          <% if c.name == 'Torturi' || c.name == 'Candy bar' %>
          <%= link_to 'Modele' %>
        <% end %>
        <% if policy(c).edit? %>
          <%= link_to 'Edit', edit_category_path(c.id) %>  
        <% end %>
        <% if policy(c).destroy? %>
        <%= link_to 'Delete', category_path(c), method: :delete %></p>
        <% end %>
      </div>
      <% end %>
    </div>
    
    <% if policy(Category).new? %>
    <%= link_to 'New category', new_category_path %>
    <% end %>
  </div>    
