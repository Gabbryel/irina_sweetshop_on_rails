<% hero = HeroSection.first %>
<% if hero.present? %>
  <div class="hero-section-new">
    <% if hero.background_image_url.present? %>
      <div class="hero-section-new__svg-background">
        <svg width="100%" height="100%" viewBox="0 0 1440 1000" preserveAspectRatio="xMidYMid slice" xmlns="http://www.w3.org/2000/svg">
          <defs>
            <pattern id="heroBackgroundImage" patternUnits="userSpaceOnUse" width="1440" height="1000">
              <image href="<%= hero.background_image_url %>" x="0" y="0" width="1440" height="1000" preserveAspectRatio="xMidYMid slice" />
            </pattern>
          </defs>
          <rect width="100%" height="100%" fill="url(#heroBackgroundImage)" />
        </svg>
      </div>
    <% end %>
    <div class="hero-section-new__overlay"></div>
    
    <div class="hero-section-new__content">
      <h1 class="hero-section-new__title" data-aos="fade-up" data-aos-duration="800">
        <%= hero.title %>
      </h1>
      <p class="hero-section-new__subtitle" data-aos="fade-up" data-aos-duration="800" data-aos-delay="100">
        <%= hero.subtitle %>
      </p>
      <%= link_to hero.button_text, hero.button_link, class: 'hero-section-new__cta', data: { aos: "fade-up", aos_duration: "800", aos_delay: "200" } %>
