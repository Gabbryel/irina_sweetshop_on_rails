  <% @recipes.each do |recipe| %>
          <div class= "col-11 col-md-5 mx-md-3 col-xl-4 mx-xl-5 recipe-card_container">
            <%= cl_image_tag recipe.photo.key, alt: recipe.name,class: 'card-image recipe-card_image' %> <br>
            <h4 class='text-center p-1 recipe-card_name color-fonts'><%= link_to "#{recipe.name}", recipe_path(recipe) %></h4>
            <div class='recipe-card_rating-total'>
              <p class='text-center fonts-family color-fonts'><%= "#{recipe.overall_rating.to_f.round(2)}"%> <%= '⭐️' * recipe.overall_rating.to_i %> <%= recipe.no_of_ratings %> </p>
            </div>
            <div class="recipe-card_describe-card">
              <p class='text-center card-content pt-1 color-fonts rem1'><%= recipe.content.split.first(7).join(' ') + '...'%><b><%= link_to 'detalii', recipe_path(recipe) %></b> </p>
            </div>
            <div class="recipe-price-holder d-flex flex-column justify-content-center align-items-center fonts-family color-fonts fonts-700">
              <p class="recipe-price  text-center  m-0 p-0"><%= humanized_money_with_symbol(recipe.price) %></p>
              <p class="p-0 m-0 rem1-2 fonts-family"><%= recipe.kg ? 'kg' : 'buc' %></p>
            </div>

          
            <div class='recipe-card_admin-links'>
              <% if policy(recipe).edit? %>
                <%= link_to edit_category_recipe_path(recipe.category_id, recipe.id) do %>
                  <i class="far fa-edit color-fonts"></i>
                <% end %>
              <% end %>
              <% if policy(recipe).destroy? %>
                <%= link_to category_recipe_path(recipe.category_id, recipe.id), method: :delete do %>
                  <i class="fas fa-trash-alt color-fonts"></i>
                <% end %>
              <% end %>
            </div>
          </div>
  <% end %>

  <div class="container-fluid">
    <div class="row justify-content-center">
      <div class='col-10 col-md-5 col-lg-5 fonts-family'>
        <% if policy(Recipe).new? %>
          <%= link_to 'Rețetă nouă', new_category_recipe_path(@category.id), class: 'btn button-rounded button-default button-new-recipe_setup my-5' %>
        <% end %>
      </div> 
    </div>
  </div>