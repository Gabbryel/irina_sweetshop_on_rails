<%= simple_form_for([@cakemodel, @model_component]) do |f| %>
<% if @cakemodel %>
  <%= f.association :recipe, collection: Recipe.all.where(category_id: @cakemodel.category_id), prompt: "Alege rețeta!", label: false %>
<% end %>
  <%= f.input :weight, label: false, placeholder: 'Gramaj' %>
  <%= f.submit "Adaugă rețetă acestui model", id: 'submit' %>
<% end %>