<% if @recipe %>
  <% @target = @recipe %>
<% elsif @cakemodel %>
  <% @target = @cakemodel %>
<% end %>

  <%= simple_form_for [@target, @review] do |f| %>
      <%= f.input :rating, collection: %i[1 2 3 4 5], label: 'Rating de la 1 la 5' %>
      <%= f.input :content, label: 'Recenzie' %>
    <%= f.button :submit, value: 'Posteaza recenzia', class: 'btn-default' %>
  <% end %>