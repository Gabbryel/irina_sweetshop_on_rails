<% @page_title = 'Setează parolă nouă | Cofetăria Irina' %>

<div class="auth-layout container py-5">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-10">
      <div class="row g-4 auth-wrapper">
        <div class="col-12 col-lg-5">
          <div class="auth-hero p-4 p-lg-5 h-100 rounded-4">
            <span class="badge bg-light text-dark border rounded-pill px-3 py-2 mb-3">Parolă nouă</span>
            <h1 class="h2 fw-bold mb-3">Alege o parolă sigură</h1>
            <p class="text-muted mb-4">Completează parola nouă și confirmă pentru a-ți securiza contul.</p>
            <% if @minimum_password_length %>
              <p class="text-muted small mb-0">Minimum <strong><%= @minimum_password_length %></strong> caractere.</p>
            <% end %>
          </div>
        </div>

        <div class="col-12 col-lg-7">
          <div class="card border-0 shadow-lg auth-card rounded-4">
            <div class="card-body p-4 p-lg-5">
              <div class="d-flex align-items-center justify-content-between mb-3">
                <div>
                  <p class="text-muted mb-1 small">Resetare parolă</p>
                  <h2 class="h4 fw-bold mb-0">Setează parola nouă</h2>
                </div>
                <div class="auth-avatar d-inline-flex align-items-center justify-content-center rounded-circle">
                  <i class="fa-solid fa-lock"></i>
                </div>
              </div>

              <% flash_message = flash[:alert] || flash[:error] || flash[:notice] %>
              <% if flash_message.present? %>
                <div class="alert <%= flash[:alert] || flash[:error] ? 'alert-danger' : 'alert-info' %>" role="alert">
                  <%= flash_message %>
                </div>
              <% end %>

              <% if resource.errors.any? %>
                <div class="alert alert-danger" role="alert">
                  <p class="fw-semibold mb-2">Te rugăm să corectezi următoarele:</p>
                  <ul class="mb-0">
                    <% resource.errors.full_messages.each do |msg| %>
                      <li><%= msg %></li>
                    <% end %>
                  </ul>
                </div>
              <% end %>

              <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'auth-form', data: { turbo: false } }) do |f| %>
                <%= f.error_notification %>
                <%= f.input :reset_password_token, as: :hidden %>
                <%= f.full_error :reset_password_token %>

                <div class="mb-3">
                  <%= f.input :password,
                              label: 'Parolă nouă',
                              required: true,
                              autofocus: true,
                              hint: (@minimum_password_length ? "Minim #{@minimum_password_length} caractere" : nil),
                              input_html: { autocomplete: "new-password", class: 'form-control form-control-lg' },
                              label_html: { class: 'form-label fw-semibold' } %>
                </div>

                <div class="mb-4">
                  <%= f.input :password_confirmation,
                              label: 'Confirmă parola nouă',
                              required: true,
                              input_html: { autocomplete: "new-password", class: 'form-control form-control-lg' },
                              label_html: { class: 'form-label fw-semibold' } %>
                </div>

                <div class="d-grid">
                  <%= f.button :submit, 'Salvează parola', class: 'btn btn-primary btn-lg shadow-sm' %>
                </div>
              <% end %>

              <div class="auth-links text-center mt-4">
                <%= render "devise/shared/links" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
