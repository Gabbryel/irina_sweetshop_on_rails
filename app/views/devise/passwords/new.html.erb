<div class="devise-main-container">
  <h2 class="my-5 text-center">Ai uitat parola?</h2>
  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>
  
  <div class="form-inputs">
    <%= f.input :email,
                label: 'Introdu adresa ta de e-mail:',
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" } 
    %>
  </div>
  <div class="d-flex justify-content-center my-5 justify-content-lg-start">
    <%= f.button :submit, "SchimbÄƒ parola!", class: 'btn-user-forms' %>
  </div>
  <% end %>
  <div class='mt-5 d-flex flex-column align-items-center flex-lg-row justify-content-lg-between'>
    <%= render "devise/shared/links" %>
  </div>

</div>
 

