<% @page_title = 'Login cont Cofetăria irina' %>
<div class="devise-main-container">
  <div>
    <p class='text-center mt-5'>Intră în cont:</p>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs rem1-3">
        <%= f.input :email, required: false, autofocus: true, label: 'e-mail', input_html: { autocomplete: "email" }, label_html: { class: 'rem1-3' } %>
        <%= f.input :password, required: false, label: 'parola', input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, label: 'Vreau să rămân logat!', as: :boolean if devise_mapping.rememberable? %>
      </div>
    
      <div class='d-flex justify-content-center my-5'>
        <%= f.button :submit, "Intră în cont", class: 'btn-default btn-user-forms text-center' %>
      </div>
    <% end %>
  </div>
  <div class='mt-5 d-flex flex-column align-items-center flex-lg-row justify-content-lg-between'>
    <%= render "devise/shared/links" %>
  </div>
</div>