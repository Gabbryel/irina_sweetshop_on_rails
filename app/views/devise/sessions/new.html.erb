<% @page_title = 'Login cont Cofetăria irina' %>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-10 col-md-8 col-lg-6 font-family color-fonts position-relative top-margin">
      <p class='text-center mt-5 fonts-family rem1-5 fonts-700'>Intră în cont:</p>
      
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs rem1-3">
          <%= f.input :email, required: false, autofocus: true, label: 'e-mail', input_html: { autocomplete: "email" }, label_html: { class: 'rem1-3' } %>
          <%= f.input :password, required: false, label: 'parola', input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, label: 'Vreau să rămân logat!', as: :boolean if devise_mapping.rememberable? %>
        </div>
      
        <div class="form-actions">
          <%= f.button :submit, "Intră în cont", class: 'btn button-rounded button-default rem1-3 my-3' %>
        </div>
      <% end %>
      
    </div>
  </div>
  <div class="row position-relative justify-content-center font-family top-margin">
    <div class="col-10 col-md-8 col-lg-6 d-flex">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>