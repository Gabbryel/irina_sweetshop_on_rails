<div class="container log-in">
  <div class="row">
    <div class="col">
      <h4 class='login-fonts text-center'>Intră în cont:</h4>
      
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      label: 'Adresa de email',
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      label: 'Parola',
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, label: 'Vreau să rămân logat!', as: :boolean if devise_mapping.rememberable? %>
        </div>
      
        <div class="form-actions">
          <%= f.button :submit, "Intră în cont", class: 'btn btn-custom btn-block login-fonts' %>
        </div>
      <% end %>
      
    </div>
  </div>
  <div class="row login-buttons">
    <div class="col">
      <p class="text-center edit-fonts">sau</p>
      <p class="mt-2"><%= render "devise/shared/links" %></p>
    </div>
  </div>
</div>