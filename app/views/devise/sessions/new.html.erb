<% @page_title = 'Login cont Cofetăria irina' %>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-10 col-md-8 col-lg-6 fonts-family color-fonts rem1-3 position-relative top-margin">
      <p class='text-center mt-5 fonts-family rem1-5 fonts-700'>Intră în cont:</p>
      
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true, label: 'Adresa de email', input_html: { autocomplete: "email" }, label_html: { class: 'rem1-3' } %>
          <%= f.input :password, required: false, label: 'Parola', input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, label: 'Vreau să rămân logat!', as: :boolean if devise_mapping.rememberable? %>
        </div>
      
        <div class="form-actions">
          <%= f.button :submit, "Intră în cont", class: 'btn btn-block button-rounded button-default' %>
        </div>
      <% end %>
      
    </div>
  </div>
  <div class="row position-relative justify-content-center fonts-family top-margin">
    <div class="col-10 col-md-8 col-lg-6">
      <p class="text-center fonts-family color-fonts rem1-3">sau</p>
      <p class="mt-2"><%= render "devise/shared/links" %></p>
    </div>
  </div>
</div>