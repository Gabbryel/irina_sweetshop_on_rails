<% @page_title = 'Editare cont - Cofetăria Irina Bacău' %>

<div class="container account-edit-page margin-top-20dvh">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-10">
      <div class="card shadow-sm border-0 account-edit-card">
        <div class="card-body p-4 p-md-5">
          <div class="d-flex justify-content-between flex-wrap gap-2 mb-3">
            <div>
              <span class="badge bg-dark text-uppercase">Setări cont</span>
              <h1 class="h4 mt-2 mb-0">Editează contul</h1>
              <p class="text-muted mb-0">Autentificat ca <strong><%= current_user.email %></strong></p>
            </div>
            <div class="text-end small text-muted">
              <div><i class="fa-regular fa-shield"></i> Siguranță cont</div>
            </div>
          </div>

          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'row g-3' }) do |f| %>
            <%= f.error_notification %>

            <div class="col-12 col-md-6">
              <%= f.input :email, required: true, autofocus: true, label: "Adresa de email", input_html: { class: 'form-control' } %>
              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <p class="text-warning small mt-1">Aștepți confirmarea pentru: <%= resource.unconfirmed_email %></p>
              <% end %>
            </div>

            <div class="col-12 col-md-6">
              <%= f.input :password,
                          hint: "Lasă gol dacă nu vrei să modifici",
                          required: false,
                          label: "Parola nouă",
                          input_html: { autocomplete: "new-password", class: 'form-control' } %>
            </div>

            <div class="col-12 col-md-6">
              <%= f.input :password_confirmation,
                          required: false,
                          label: "Confirmă parola nouă",
                          input_html: { autocomplete: "new-password", class: 'form-control' } %>
            </div>

            <div class="col-12 col-md-6">
              <%= f.input :current_password,
                          hint: "Necesar pentru a salva modificările",
                          required: true,
                          label: "Parola curentă",
                          input_html: { autocomplete: "current-password", class: 'form-control' } %>
            </div>

            <div class="col-12 d-flex justify-content-between flex-wrap gap-2 mt-2">
              <%= link_to 'Înapoi', :back, class: 'btn btn-outline-secondary' %>
              <%= f.button :submit, "Salvează modificările", class: "btn btn-dark" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="row justify-content-center mt-4">
    <div class="col-12 col-lg-10">
      <div class="card border-0 shadow-sm bg-light">
        <div class="card-body d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-3">
          <div>
            <h2 class="h6 mb-1 text-danger">Șterge contul</h2>
            <p class="text-muted small mb-0">Această acțiune este definitivă. Toate datele asociate contului vor fi eliminate.</p>
          </div>
          <%= link_to "Șterge contul", registration_path(resource_name), data: { confirm: "Ești sigur că vrei să ștergi contul?" }, method: :delete, class: "btn btn-outline-danger" %>
        </div>
      </div>
    </div>
  </div>
</div>

