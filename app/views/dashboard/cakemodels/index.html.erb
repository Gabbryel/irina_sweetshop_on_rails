<div class="container py-5 dashboard-cakemodels margin-top-20dvh">
  <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-4 gap-3">
    <div>
      <span class="badge rounded-pill px-3 py-2 mb-2" style="background: #f1f5f9; color: #475569; font-weight: 600;">Administrator</span>
      <h1 class="h3 mb-0" style="color: #1e293b; font-weight: 600;">Administrare modele tort</h1>
      <p class="text-muted small mb-0">Gestionează modelele disponibile, marchează cele pentru comandă rapidă și verifică categorii.</p>
    </div>
    <div class="text-md-end">
      <div class="d-flex flex-column gap-2 align-items-md-end">
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#newCakemodelModal">
          Adaugă model
        </button>
        <div>
          <p class="text-muted small mb-1">Modele în listă</p>
          <p class="h4 mb-0"><%= number_with_delimiter(@pagy&.count || 0) %></p>
        </div>
      </div>
    </div>
  </div>

  <div class="row row-cols-1 row-cols-md-2 row-cols-xl-4 g-3 mb-4">
    <% @stats_cards.each do |stat| %>
      <div class="col">
        <div class="card h-100" style="border: 1px solid #e5e7eb; border-radius: 8px;">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-start mb-3">
              <div>
                <p class="text-muted small mb-1"><%= stat[:label] %></p>
                <p class="h4 mb-0" style="color: #1e293b; font-weight: 700;"><%= number_with_delimiter(stat[:value]) %></p>
              </div>
              <span class="badge rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 40px; height: 40px; background: #1e293b; color: white;">
                <i class="<%= stat[:icon] %>"></i>
              </span>
            </div>
            <p class="text-muted small mb-0"><%= stat[:hint] %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="card mb-4" style="border: 1px solid #e5e7eb; border-radius: 8px;">
    <div class="card-header py-3" style="background: #f8fafc; border-bottom: 1px solid #e5e7eb;">
      <h2 class="h6 mb-0" style="color: #1e293b; font-weight: 600;">Filtre rapide</h2>
    </div>
    <div class="card-body">
      <div class="d-flex flex-column flex-lg-row gap-3 align-items-lg-end">
        <%= form_with url: dashboard_cakemodels_path, method: :get, scope: :search, local: true, html: { class: 'row g-3 flex-grow-1 align-items-end' } do |f| %>
          <div class="col-12 col-lg-3">
            <%= f.label :search_for, 'Caută modele', class: 'form-label small text-uppercase text-muted fw-semibold' %>
            <%= f.search_field :search_for, value: @search_query, placeholder: 'Ex.: Tort Aniversar', class: 'form-control', aria: { label: 'Caută modele' } %>
          </div>
          <div class="col-12 col-lg-3">
            <%= f.label :category_id, 'Categorie', class: 'form-label small text-uppercase text-muted fw-semibold' %>
            <%= f.select :category_id,
                         options_for_select([['Toate categoriile', '']] + @categories.map { |category| [category.name, category.id] }, @selected_category),
                         {},
                         class: 'form-select' %>
          </div>
          <div class="col-12 col-lg-3">
            <%= f.label :design_id, 'Design', class: 'form-label small text-uppercase text-muted fw-semibold' %>
            <%= f.select :design_id,
                         options_for_select([['Toate design-urile', '']] + @designs.map { |design| [design.name, design.id] }, @selected_design),
                         {},
                         class: 'form-select' %>
          </div>
          <div class="col-12 col-lg-3">
            <div class="form-check mb-2">
              <%= f.check_box :featured, { class: 'form-check-input', include_hidden: false, checked: @filters[:featured] }, 'true', nil %>
              <%= f.label :featured, 'Doar pe homepage', class: 'form-check-label' %>
            </div>
            <%= f.submit 'Aplică filtrele', class: 'btn btn-primary w-100' %>
          </div>
        <% end %>

        <%= link_to 'Resetează filtrele', dashboard_cakemodels_path, class: "btn btn-outline-secondary#{@filters.blank? ? ' disabled' : ''}" %>
      </div>
    </div>
  </div>

  <div class="card shadow-sm border-0">
    <div class="card-header bg-white border-0 py-3 d-flex justify-content-between align-items-center flex-wrap gap-2">
      <h2 class="h6 mb-0"><%= @current_scope_label %></h2>
      <span class="badge bg-light text-dark"><%= pluralize(@pagy&.count || 0, 'înregistrare') %></span>
    </div>

    <% if @cakemodels.any? %>
      <div class="table-responsive">
        <table class="table table-sm align-middle mb-0">
          <thead class="table-light">
            <tr>
              <th style="width: 80px;">Imagine</th>
              <th>Denumire</th>
              <th>Categorie</th>
              <th>Design</th>
              <th>Status</th>
              <th>Actualizat</th>
              <th class="text-end">Acțiuni</th>
            </tr>
          </thead>
          <tbody>
            <%= render partial: 'cakemodel', collection: @cakemodels, as: :cakemodel %>
          </tbody>
        </table>
      </div>

      <div class="card-footer bg-white border-top py-3">
        <%== pagy_bootstrap_nav(@pagy) if @pagy %>
      </div>
    <% else %>
      <div class="card-body py-5 text-center">
        <i class="fa-solid fa-cake-candles fa-3x text-muted mb-3"></i>
        <p class="text-muted mb-3">Nu există modele care să corespundă criteriilor selectate.</p>
        <%= link_to 'Resetează filtrele', dashboard_cakemodels_path, class: 'btn btn-outline-primary' %>
      </div>
    <% end %>
  </div>
</div>

<%= render 'modal' %>

<% @cakemodels.each do |cakemodel| %>
  <%= render 'edit_modal', cakemodel: cakemodel, modal_id: "editCakemodel#{cakemodel.id}" %>
<% end %>

<% if @cakemodel.errors.any? %>
  <script>
    (() => {
      const openNewCakemodelModal = () => {
        const modalElement = document.getElementById('newCakemodelModal');
        if (!modalElement) return;

        if (window.bootstrap && window.bootstrap.Modal) {
          const modal = window.bootstrap.Modal.getOrCreateInstance(modalElement);
          modal.show();
          return;
        }

        modalElement.classList.add('show');
        modalElement.style.display = 'block';
        modalElement.removeAttribute('aria-hidden');
        document.body.classList.add('modal-open');

        if (!document.querySelector('.modal-backdrop.show')) {
          const backdrop = document.createElement('div');
          backdrop.className = 'modal-backdrop fade show';
          document.body.appendChild(backdrop);
        }
      };

      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', openNewCakemodelModal, { once: true });
      } else {
        openNewCakemodelModal();
      }
      document.addEventListener('turbo:load', openNewCakemodelModal, { once: true });
      window.addEventListener('load', openNewCakemodelModal, { once: true });
    })();
  </script>
<% end %>

