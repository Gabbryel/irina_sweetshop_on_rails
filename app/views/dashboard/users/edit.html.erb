<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card p-4">
        <h3 class="h5 mb-3">Editează utilizator</h3>

        <%= form_with(model: [:dashboard, @user], local: true) do |f| %>
          <div class="mb-3">
            <%= f.label :email, 'Email' %>
            <%= f.email_field :email, class: 'form-control' %>
          </div>

          <div class="form-check mb-3">
            <%= f.check_box :admin, class: 'form-check-input', id: 'user_admin' %>
            <%= f.label :admin, 'Administrator', class: 'form-check-label' %>
          </div>

          <div class="d-flex gap-2">
            <%= f.submit 'Salvează', class: 'btn btn-primary' %>
            <%= link_to 'Înapoi', dashboard_path(anchor: 'users-admin'), class: 'btn btn-outline-secondary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
