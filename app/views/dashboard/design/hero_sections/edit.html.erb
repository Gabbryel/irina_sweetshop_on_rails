<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-10">
      <div class="card p-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h3 class="h4 mb-0">Editare Hero Section</h3>
          <%= link_to 'Înapoi la Dashboard', dashboard_path, class: 'btn btn-outline-secondary' %>
        </div>

        <% if @hero_section.errors.any? %>
          <div class="alert alert-danger">
            <h4><%= pluralize(@hero_section.errors.count, "eroare") %> au împiedicat salvarea:</h4>
            <ul>
              <% @hero_section.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <%= form_with(model: @hero_section, url: dashboard_design_hero_section_path, local: true, html: { multipart: true }) do |f| %>
          <div class="row">
            <div class="col-md-6 mb-3">
              <%= f.label :title, 'Titlu (linia 1)', class: 'form-label' %>
              <%= f.text_field :title, class: 'form-control', placeholder: 'ex: Deserturi proaspete' %>
            </div>

            <div class="col-md-6 mb-3">
              <%= f.label :subtitle, 'Subtitlu (linia 2)', class: 'form-label' %>
              <%= f.text_field :subtitle, class: 'form-control', placeholder: 'ex: în fiecare zi' %>
            </div>
          </div>

          <div class="row">
            <div class="col-md-6 mb-4">
              <%= f.label :background_image, 'Imagine de fundal', class: 'form-label' %>
              <% if @hero_section.background_image.attached? %>
                <div class="mb-2">
                  <%= image_tag @hero_section.background_image, class: 'img-fluid rounded', style: 'max-height: 200px; object-fit: cover;' %>
                </div>
              <% end %>
              <%= f.file_field :background_image, class: 'form-control', accept: 'image/*' %>
              <small class="form-text text-muted">Imaginea va fi afișată ca fundal pentru hero section</small>
            </div>

            <div class="col-md-6 mb-4">
              <%= f.label :main_image, 'Imagine principală', class: 'form-label' %>
              <% if @hero_section.main_image.attached? %>
                <div class="mb-2">
                  <%= image_tag @hero_section.main_image, class: 'img-fluid rounded', style: 'max-height: 200px; object-fit: cover;' %>
                </div>
              <% end %>
              <%= f.file_field :main_image, class: 'form-control', accept: 'image/*' %>
              <small class="form-text text-muted">Imaginea va fi afișată în centrul hero section</small>
            </div>
          </div>

          <div class="card bg-light p-3 mb-4">
            <h5 class="h6 mb-2">Preview text</h5>
            <div class="hero-preview text-center">
              <h1 class="display-4 fw-bold text-primary">
                <%= @hero_section.title || 'Titlu' %>
              </h1>
              <h2 class="h3 text-secondary">
                <%= @hero_section.subtitle || 'Subtitlu' %>
              </h2>
            </div>
          </div>

          <div class="d-flex gap-2">
            <%= f.submit 'Salvează modificările', class: 'btn btn-primary' %>
            <%= link_to 'Anulează', dashboard_path, class: 'btn btn-outline-secondary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
