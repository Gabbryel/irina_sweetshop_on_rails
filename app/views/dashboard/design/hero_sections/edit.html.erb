<div class="container py-5 dashboard-hero-section margin-top-20dvh">
  <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-4 gap-3">
    <div>
      <span class="badge rounded-pill px-3 py-2 mb-2" style="background: #f1f5f9; color: #475569; font-weight: 600;">Administrator / Design</span>
      <h1 class="h3 mb-0" style="color: #1e293b; font-weight: 600;">Editare Hero Section</h1>
      <p class="text-muted small mb-0">Configurează secțiunea principală (hero) din pagina de acasă.</p>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-8">
      <div class="card" style="border: 1px solid #e5e7eb; border-radius: 8px;">
        <div class="card-header py-3" style="background: #f8fafc; border-bottom: 1px solid #e5e7eb;">
          <h2 class="h6 mb-0" style="color: #1e293b; font-weight: 600;">Detalii Hero Section</h2>
        </div>
        <div class="card-body">
          <%= form_with model: @hero_section, url: dashboard_design_hero_section_path, method: :patch, local: true, html: { multipart: true } do |f| %>
            
            <div class="mb-4">
              <%= f.label :title, 'Titlu principal', class: 'form-label fw-semibold' %>
              <%= f.text_field :title, class: 'form-control', placeholder: 'Ex: Deserturi proaspete' %>
              <% if @hero_section.errors[:title].any? %>
                <div class="text-danger small mt-1"><%= @hero_section.errors[:title].join(', ') %></div>
              <% end %>
            </div>

            <div class="mb-4">
              <%= f.label :subtitle, 'Subtitlu', class: 'form-label fw-semibold' %>
              <%= f.text_field :subtitle, class: 'form-control', placeholder: 'Ex: în fiecare zi' %>
              <% if @hero_section.errors[:subtitle].any? %>
                <div class="text-danger small mt-1"><%= @hero_section.errors[:subtitle].join(', ') %></div>
              <% end %>
            </div>

            <div class="mb-4">
              <%= f.label :button_text, 'Text buton', class: 'form-label fw-semibold' %>
              <%= f.text_field :button_text, class: 'form-control', placeholder: 'Ex: Vezi produsele' %>
              <% if @hero_section.errors[:button_text].any? %>
                <div class="text-danger small mt-1"><%= @hero_section.errors[:button_text].join(', ') %></div>
              <% end %>
            </div>

            <div class="mb-4">
              <%= f.label :button_link, 'Link buton', class: 'form-label fw-semibold' %>
              <%= f.text_field :button_link, class: 'form-control', placeholder: 'Ex: /categories' %>
              <small class="form-text text-muted">Calea relativă sau URL-ul complet către care va trimite butonul</small>
              <% if @hero_section.errors[:button_link].any? %>
                <div class="text-danger small mt-1"><%= @hero_section.errors[:button_link].join(', ') %></div>
              <% end %>
            </div>

            <hr class="my-4">

            <div class="mb-4">
              <%= f.label :main_image, 'Imagine principală', class: 'form-label fw-semibold' %>
              <% if @hero_section.main_image.attached? %>
                <div class="mb-3">
                  <p class="small text-muted mb-2">Imagine curentă:</p>
                  <%= image_tag @hero_section.main_image, class: 'img-fluid rounded', style: 'max-height: 200px; object-fit: contain;' %>
                </div>
              <% end %>
              <%= f.file_field :main_image, class: 'form-control', accept: 'image/*' %>
              <small class="form-text text-muted">Imaginea produsului care va apărea în hero section. Format: JPG, PNG, WebP</small>
            </div>

            <div class="mb-4">
              <%= f.label :background_image, 'Imagine fundal', class: 'form-label fw-semibold' %>
              <% if @hero_section.background_image.attached? %>
                <div class="mb-3">
                  <p class="small text-muted mb-2">Imagine curentă:</p>
                  <%= image_tag @hero_section.background_image, class: 'img-fluid rounded', style: 'max-height: 200px; object-fit: cover; width: 100%;' %>
                </div>
              <% end %>
              <%= f.file_field :background_image, class: 'form-control', accept: 'image/*' %>
              <small class="form-text text-muted">Imaginea de fundal pentru hero section. Format: JPG, PNG, WebP</small>
            </div>

            <hr class="my-4">

            <div class="d-flex justify-content-end gap-2">
              <%= link_to 'Înapoi', root_path, class: 'btn btn-outline-secondary' %>
              <%= f.submit 'Salvează modificările', class: 'btn btn-primary' %>
            </div>

          <% end %>
        </div>
      </div>
    </div>

    <div class="col-lg-4">
      <div class="card" style="border: 1px solid #e5e7eb; border-radius: 8px;">
        <div class="card-header py-3" style="background: #f8fafc; border-bottom: 1px solid #e5e7eb;">
          <h2 class="h6 mb-0" style="color: #1e293b; font-weight: 600;">Preview</h2>
        </div>
        <div class="card-body">
          <p class="small text-muted">Secțiunea hero va apărea pe pagina de acasă și va include:</p>
          <ul class="small text-muted">
            <li>Un titlu și subtitlu personalizabil</li>
            <li>Un buton cu acțiune configurabilă</li>
            <li>O imagine principală (produs)</li>
            <li>O imagine de fundal</li>
            <li>Efect decorativ de ciocolată topită</li>
          </ul>
          <hr>
          <p class="small text-muted mb-2"><strong>Dimensiuni recomandate:</strong></p>
          <ul class="small text-muted mb-0">
            <li>Imagine principală: 800x800px</li>
            <li>Imagine fundal: 1920x1080px</li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
