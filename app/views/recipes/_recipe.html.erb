<div class='product-card'>
    <% if recipe.photo.key %>
      <%= cl_image_tag recipe.photo.key, alt: recipe.name,class: 'product-card-image' %> <br>
    <% else %>
      <%= cl_image_tag("4792t30n2v5ovn35m550ffa45a24.png") alt: "Cofetăria Irina - produse", class: 'product-card-image' %> %> <br>
    <% end %>
  <h4><%= recipe.name %></h4>
  <div>
    <p><%= "#{recipe.overall_rating.to_f.round(2)}"%> <%= '⭐️' * recipe.overall_rating.to_i %> <%= recipe.no_of_ratings %> </p>
  </div>
  <div>
    <p><%= recipe.content %></p>
  </div>
  <%= link_to 'Detalii', recipe_path(recipe.id), class: ''%>
  <div>
    <% if policy(recipe).edit? %>
      <%= link_to edit_category_recipe_path(recipe.category_id, recipe.id) do %>
        <i class="far fa-edit"></i>
      <% end %>
    <% end %>
    <% if policy(recipe).destroy? %>
      <%= link_to category_recipe_path(recipe.category_id, recipe.id), method: :delete do %>
        <i class="fas fa-trash-alt"></i>
      <% end %>
    <% end %>
  </div>
</div>