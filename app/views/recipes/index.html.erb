<div class="cards-container">
  <h3 class='text-center'><%= "Rețete de #{Category.find(params[:category_id]).name.downcase}" %> 
    <span>(<%= @recipes.count %>)</span>
  </h3>
  <div class="cards-container-index">
    <%= render @recipes %>
  </div>
  <div class="cards-container-new-recipe">
    <% if policy(Recipe).new? %>
      <%= link_to 'Rețetă nouă', new_category_recipe_path, class: 'btn-default' %>
    <% end %>
  </div>
</div>