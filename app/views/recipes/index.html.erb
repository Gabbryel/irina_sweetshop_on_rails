<div class="container cards-container">
  <h3 class='text-center'><%= Category.find(params[:category_id]).name %>  (<%= @recipes.count %>)</h3>
  <div class="row jusify-content-center">
    
    <% @recipes.each do |r| %>
    <div class="col-sm-5 col-md-5 col-lg-3 card-container card-overflow">
      <%= cl_image_tag r.photo.key, class: 'card-image' %> <br>
      <h4 class='text-center p-1'><%= r.name %></h4>
      <p class='rating-total border-bottom border-secondary'>Rating total: <%= '⭐️' * r.overall_rating.to_i %> <%= "(#{r.overall_rating})"%></p>
      <h6 class='text-center p-2 '>Descriere</h6>
      <p class='text-justify card-content border-bottom border-secondary'><%= r.content %></p>
    <div class="rating-card_holder">
      <h6 class='text-center'>Rating & reviews</h6>
      <% r.reviews.each do |rev| %>
      <div class="rating-card">
        <p>Recenzie (id: <%= rev.id %>) - Rating: <%= '⭐️' * rev.rating %><%= "(#{rev.rating})" %></p>
        <p><%= rev.content %></p>
        <p>Autor: <%= rev.user.email.split('@').first.capitalize %></p>
      </div>
      <% end %>
    </div>

      <p>
        <% if policy(r).edit? %>
          <%= link_to 'Edit', edit_category_recipe_path(r.category_id, r.id) %>
        <% end %>
        <% if policy(r).destroy? %>
          <%= link_to 'Delete', category_recipe_path(r.category_id, r.id), method: :delete %>
        <% end %>
      </p>
    </div>
    <% end %>
  </div>

  <% if policy(Recipe).new? %>
  <div class="category-button">
    <%= link_to 'New recipe', new_category_recipe_path %>
  </div>
  <% end %>

</div>
